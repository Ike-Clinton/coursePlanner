%html
  %head
    %title My Sinatra Website
    %link(rel="stylesheet" href="http://yui.yahooapis.com/2.8.0r4/build/reset/reset-min.css")
    %link(rel="stylesheet" href="css/styles.css")
  %body
    #wrapper
      #header
        %h1 Course Planner
        %h2 Register Page
      #nav
        %ol
          %a(href="/")
            %li Home
          %a(href="register")
            %li Register
          %a(href="login")
            %li Login
          %a(href="main")
            %li Main
        %h1 The Register Page
        %p
          Register for some classes Yo
        %p
          This is the register page and this is some text to fill out the register page!
        #content
        = form_tag '/register' do
          = field_set_tag do
            = label_tag 'email', 'Email'
            = text_field_tag :email
            = label_tag 'name', 'Name'
            = text_field_tag :name
            = label_tag 'academic_class', 'Academic Class'
            = text_field_tag :academic_class
            = label_tag 'is_advisor', 'Advisor?'
            = text_field_tag :is_advisor
            = submit_tag 'Submit'
 
      #side_bar
        %h1 Side Bar
        %p
          This is the side bar of the webpage
 
